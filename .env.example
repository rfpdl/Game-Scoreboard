APP_NAME="Game Scoreboard"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Branding (leave LOGO_URL empty for text-based logo)
APP_LOGO_URL=
APP_PRIMARY_COLOR="#f97316"

APP_LOCALE=en
APP_FALLBACK_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE
# ===========================================
# For simple setup, use SQLite (no Docker needed):
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# For MySQL (Docker setup):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=gameleaderboard
# DB_USERNAME=root
# DB_PASSWORD=

# ===========================================
# SESSION, CACHE, QUEUE
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

FILESYSTEM_DISK=local
CACHE_STORE=redis
QUEUE_CONNECTION=sync

# ===========================================
# REDIS
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# BROADCASTING (Optional - for real-time updates)
# ===========================================
# Real-time updates are OPTIONAL. The app works fine without them.
# Leave BROADCAST_CONNECTION=null for no real-time (uses manual refresh)
BROADCAST_CONNECTION=null

# To enable real-time updates with Laravel Reverb:
# 1. Install Reverb: php artisan install:broadcasting
# 2. Run Reverb: php artisan reverb:start
# 3. Uncomment and configure:
# BROADCAST_CONNECTION=reverb
# REVERB_APP_ID=your-app-id
# REVERB_APP_KEY=your-app-key
# REVERB_APP_SECRET=your-app-secret
# REVERB_HOST=localhost
# REVERB_PORT=8080
# REVERB_SCHEME=http
# VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
# VITE_REVERB_HOST="${REVERB_HOST}"
# VITE_REVERB_PORT="${REVERB_PORT}"
# VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ===========================================
# MAIL (defaults to log for development)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# VITE (frontend build)
# ===========================================
VITE_APP_NAME="${APP_NAME}"
