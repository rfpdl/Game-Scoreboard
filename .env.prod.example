# Production Environment Variables
# Copy to .env and fill in values before deploying
#
# Usage: docker compose -f docker-compose.prod.yml up -d

# ===========================================
# REQUIRED - Must be set before deployment
# ===========================================

# Application key (generate with: php artisan key:generate --show)
APP_KEY=

# Database password (use a strong password)
DB_PASSWORD=
MYSQL_ROOT_PASSWORD=

# ===========================================
# RECOMMENDED - Configure for your setup
# ===========================================

# Application
APP_NAME="Game Scoreboard"
APP_URL=https://your-domain.com

# Ports (change if needed)
APP_PORT=80
REVERB_PUBLIC_PORT=8080

# Database
DB_DATABASE=gamescoreboard
DB_USERNAME=gamescoreboard

# Redis (optional password)
REDIS_PASSWORD=

# Reverb WebSocket (generate unique values)
REVERB_APP_ID=your-app-id
REVERB_APP_KEY=your-app-key
REVERB_APP_SECRET=your-app-secret

# ===========================================
# OPTIONAL
# ===========================================

# Auto-run migrations on container start
AUTO_MIGRATE=true

# Image version tag
APP_VERSION=latest
